<div id="pageApp" class="row justify-content-center">

    <div class="card text-dark bg-light mt-5" style="max-width: 30rem;">
        <div class="card-header">Login</div>
        <div class="card-body">

            <div class="input-group mb-3">
                <input type="text" class="form-control" v-model="username" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <input type="password" class="form-control" v-model="password" placeholder="Password" aria-label="Recipient's Password" aria-describedby="basic-addon2">
            </div>

            <div class="d-grid gap-2 col-2 mx-auto">
                <button class="btn btn-primary" type="button" v-on:click="doLogin">Login</button>
            </div>

        </div>

    </div>


</div>


<script type="text/javascript">

    var pageApp = new Vue({
        el: '#pageApp',
        data: {
            message: 'Hello Vue.js!',
            username: '',
            password: ''
        },
        methods: {
            doLogin: function () {
                //alert(this.username + " " + this.password);
                if (this.username == null || this.password == null) {
                    alert("kullanıcı adı veya şifre hatalı");
                    return;
                }

                getLogin(this.username, this.password,
                    function success(data) {
                        setCookie("token", data.token, 1);
                        alert("Giriş başarılı");
                    },
                    function (xhr, ajaxOptions, thrownError) {
                        //alert(xhr.status);
                        //alert(thrownError);
                        alert("HATA: Lütfen kullanıcı adınızı ve şifrenizi kontrol edip tekrar deneyiniz.");
                    }
                );
 
            }
        }
    });
</script>