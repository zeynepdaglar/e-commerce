
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="pageApp" class="row justify-content-center">
    <div class="card text-dark bg-light mt-5" style="max-width: 30rem;">
        <div class="card-header">Sign Up</div>
        <div class="card-body">

            <div class="input-group mb-3">
                <input type="text" class="form-control" v-model="name" placeholder="Name" aria-label="Name" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" v-model="surname" placeholder="Surname" aria-label="Surname" aria-describedby="basic-addon2">
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" v-model="username" placeholder="Username" aria-label="Username" aria-describedby="basic-addon3">
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" v-model="email" placeholder="Email" aria-label="Email" aria-describedby="basic-addon4">
            </div>

            <div class="input-group mb-3">
                <input type="password" class="form-control" v-model="password" placeholder="Password" aria-label="Password" aria-describedby="basic-addon5">
            </div>

            <div class="d-grid gap-2 col-3 mx-auto">
                <button class="btn btn-primary" type="button" v-on:click="doSignUp">Sign Up</button>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">

    var pageApp = new Vue({
        el: '#pageApp',
        data: {
            message: 'Hello Vue.js!',
            name: '',
            surname: '',
            username: '',
            email: '',
            password:''
        },
        methods: {
            doSignUp: function () {
                if (this.name == null || this.surname == null || this.username == null || this.email == null || this.password == null) {
                    alert("Eksik bilgi girdiniz. Lütfen bilgileri tamamlayınız.");
                    return;
                }

                doSignUp(this.name, this.surname, this.username, this.email, this.password,
                    function success(data) {
                        setCookie("token", data.token, 1);
                        alert("Başarıyla Kaydoldunuz");
                    },
                    function (xhr, ajaxOptions, thrownError) {
                        alert("HATA: Lütfen bilgilerinizi kontrol edip tekrar deneyiniz.");
                    }
                );
            }
        }
    });
</script>