<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/Scripts/zeynep.js?v=2"></script>

    <link href="/css/style.css" rel="stylesheet" />
    <!--title: Sekme üzerinde gözükücek yazı-->
    <title>Home Page</title>
</head>
<body style="background-color:whitesmoke">
    <div>

        <!--Navbar-->
        <header id="header">
            <!--bg- burada menülerimizin arka plan rengi değiştirilebilir
            navbar-dark menüdeki yazıları beyaz yapar
            p: padding ile menü arkaplanını genişlebiliriz-->
            <nav class="navbar navbar-expand-md navbar-dark bg-dark py-3">
                <!--<div class="container-fluid"> yaparsak sağ tarafa bitişik olur-->
                <div class="container">
                    <!--Loga, marka vs. koyulabilir-->
                    <a class="navbar-brand" href="#">Mintmade Online</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div id="app" class="collapse navbar-collapse" @*id="navbarSupportedContent"*@>
                        <!--menüler için me-auto dersek sol tarafta, me-auto dersek sağ tarafta olur
    mb-2 mb-lg-0 bu ise ekranı çektikçe menüler arasındaki boşlukta artıyor onun asbit kalması için bunları kaldırdık.-->
                        <ul class="navbar-nav ms-auto " id="app2">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Home</a>
                            </li>

                            <li class="nav-item">

                                <a class="nav-link" href="/Home/About">About</a>
                            </li>

                            <li class="nav-item" v-for="category in categories">

                                <a class="nav-link" v-bind:href="'/?CategoryId=' + category.categoryId">{{ category.categoryName }}</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Login">Login</a>
                            </li>

                            <!--Üstte menü oluşturur-->
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/SignUp">Sign Up</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Cart">Cart</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container body-content">
            @RenderBody()
        </div>

        <!-- Optional JavaScript; choose one of the two! -->
        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!-- Option 2: Separate Popper and Bootstrap JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


    </div>

    <script type="application/javascript">

        var app = new Vue({
            el: '#app',
            data: {
                categories: [],
                products: []
            }
        })

        $(document).ready(function () {
            getCategories(function (data) {
                console.log(data);
                app.categories = data;
            });
        });

        @RenderSection("VueScript", false)
    </script>
</body>
</html>
